<!-- Here goes the navbar-->
<div class="banner-bookings">
  <div class="banner-text-bookings">
    <h1 class="banner-headers">My Bookings</h1>
  </div>
</div>

<div class="container">
  <h1 class="header-show">Upcoming bookings</h1>
  <% if @future_bookings != nil %>
    <% @future_bookings.each do |booking| %>
      <div class="event-card">
        <div class="col-3">
          <%= image_tag "louis-hansel.jpg", id: "louis-hansel-img", alt: "chef", width: 200%>
        </div>
        <div class="right col-9">
          <div>
            <h2>Chef <%= booking.event.chef.name %></h2>
            <div class="line"></div>
            <p>Host: Gabriela Sanchez</p>
          </div>
          <div class="d-flex justify-content-between">
            <div>
              <div class="emojis">
                <div class="d-flex align-items-center emoji-padding">
                  <i class="far fa-calendar-check color-yellow"></i>
                  <!-- This needs to be dinamic -->
                  <p class="ml-2 mb-0"><%= booking.event.date.strftime("%d of %B, %Y") %></p>
                </div>
                <div class="d-flex align-items-center emoji-padding">
                  <i class="fas fa-map-marker-alt color-yellow"></i>
                  <p class="ml-2 mb-0"><%= booking.event.address %></p>
                </div>
                <div class="d-flex align-items-center emoji-padding">
                  <i class="far fa-user color-yellow"></i>
                  <p class="ml-2 mb-0">Number of guests: <%= booking.number_people %></p>
                </div>
                <div class="d-flex align-items-center emoji-padding">
                  <i class="fas fa-euro-sign color-yellow"></i>
                  <p class="ml-2 mb-0">Total price: 80€</p>
                </div>
              </div>
            </div>
            <!-- here goes the btn to edit the booking -->
            <%= link_to "Edit your booking", "#", class: "btn yellow-btn low-btn"%>
          </div>
        </div>
      </div>
    <% end %>
  <% end %>
</div>

<div class="container">
  <h1 class="header-show">Past bookings</h1>
  <% if @past_bookings != nil %>
    <% @past_bookings.each do |booking| %>
      <div class="event-card">
        <div class="col-3">
          <!-- Need to change the picture of the chef -->
          <%= image_tag "louis-hansel.jpg", id: "louis-hansel-img", alt: "chef", width: 200%>
        </div>
        <div class="right col-9">
          <div>
            <h2>Chef <%= booking.event.chef.name %></h2>
            <div class="line"></div>
            <p>Host: Gabriela Sanchez</p>
          </div>
          <div class="d-flex justify-content-between">
            <div>
              <div class="emojis">
                <div class="d-flex align-items-center emoji-padding">
                  <i class="far fa-calendar-check color-yellow"></i>
                  <!-- This needs to be dinamic -->
                  <p class="ml-2 mb-0"><%= booking.event.date.strftime("%d of %B, %Y") %></p>
                </div>
                <div class="d-flex align-items-center emoji-padding">
                  <i class="fas fa-map-marker-alt color-yellow"></i>
                  <p class="ml-2 mb-0"><%= booking.event.address %></p>
                </div>
                <div class="d-flex align-items-center emoji-padding">
                  <i class="far fa-user color-yellow"></i>
                  <p class="ml-2 mb-0">Number of guests: <%= booking.number_people %></p>
                </div>
                <div class="d-flex align-items-center emoji-padding">
                  <i class="fas fa-euro-sign color-yellow"></i>
                  <p class="ml-2 mb-0">Total price: 80€</p>
                </div>
              </div>
            </div>

            <!-- Button trigger modal -->
            <button type="button" class="btn yellow-btn" data-toggle="modal" data-target="#review">
              Add a review
            </button>

            <!-- Modal -->
            <div class="modal fade" id="review" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
              <div class="modal-dialog modal-dialog-centered" role="document">
                <div class="modal-content">
                  <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLongTitle">Add a Review</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                      <span aria-hidden="true">&times;</span>
                    </button>
                  </div>
                  <div class="modal-body">
                    <!-- Make sure rating on the form has a limit of 1 to 5 -->
                    <%= render 'reviews/form', review: @review, booking: booking %>
                  </div>
                  <div class="modal-footer">
                    <!-- When you click on this btn the rating will be displayed on the event card -->
                    <button type="button" class="btn btn-primary">Save changes</button>
                  </div>
                </div>
              </div>
            </div>

          </div>
        </div>
      </div>
    <% end %>
  <% end %>
</div>
